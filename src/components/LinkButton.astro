---
interface Props {
  href: string;
  label: string;
}
const { href, label } = Astro.props;
---

<a
  href={href}
  title={label}
  aria-label={label}
  target="_blank"
  class="p-3 border border-gray-500/20 rounded-md hover:bg-gray-500/10 transition-all duration-300 hover:scale-110 text-gray-400 hover:text-white hover:shadow-md hover:shadow-gray-500/20 cursor-pointer"
>
  <slot />
</a>
