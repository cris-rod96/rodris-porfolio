---
import NextIcon from "@icons/NextIcon.astro";

interface Props {
  title: string;
  href: string | null;
}

const { title, href } = Astro.props;
---

<section class="flex flex-col pb-20">
  <div class="flex items-center justify-between mb-10">
    <h2
      class="flex items-center text-2xl font-bold text-white gap-2 [&>span]:text-[#8914dc]"
    >
      <span>#</span>
      {title}
    </h2>
    {
      href && (
        <a
          href={href}
          class="flex items-center gap-2 text-gray-400 hover:text-white transition-all duration-300 cursor-pointer"
        >
          Ver m√°s
          <NextIcon />
        </a>
      )
    }
  </div>
  <slot />
</section>
